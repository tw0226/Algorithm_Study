n = int(input())
s = []
dp = [0 for i in range(n+1)]
for _ in range(n):
	s.append(int(input()))

v = max(s[0], s[1])
count = 0
for i in range(1, n-1):
	one = v + s[i]
	two = v + s[i+1]
	max_step = max(one, two)
	if max_step==one and count!=3:
		count+=1
		v=one
	else:
		v=two
		count=0
		i+=1
print(v)
